<h1>New Photograph</h1>

<%= form_for(@photograph, url: admin_photographs_path, method: :post) do |form| %>
  <div class="field">
    <%= form.label :caption %>
    <%= form.text_field :caption %>
  </div>
  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>
  <div class="feild">
    <%= form.label :use_in_carousel %>
    <%= form.check_box :use_in_carousel %>
  </div>

  <div class="actions">
    <%= form.submit 'Upload' %>
  </div>
<% end %>

<%= link_to 'Back', admin_photographs_path %>
