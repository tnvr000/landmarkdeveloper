<p id="notice"><%= notice %></p>

<h1>Photographs</h1>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photographs.each do |photograph| %>
      <tr>
        <td><%= photograph.caption %></td>
        <td><%= image_tag photograph.photo.url(:small) %></td>
        <td><%= link_to 'Show', admin_photograph_path(photograph) %></td>
        <td><%= link_to 'Edit', edit_admin_photograph_path(photograph) %></td>
        <td><%= link_to 'Destroy', admin_photograph_path(photograph), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

