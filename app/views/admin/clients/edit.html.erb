<h1>Edit Client</h1>
<%= form_for(@client, url: admin_client_path(@client), method: :patch) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :contact_no, 'Phone Number' %>
    <%= form.text_field :contact_no %>
  </div>
  <div>
    <%= form.label :note %>
    <%= form.text_field :note %>
  </div>
  <%= form.submit 'Update' %>
<% end %>
<%= link_to('Back', admin_clients_path) %>